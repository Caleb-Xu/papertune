.transparent {
  background: transparent;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-icon {
  margin-left: 5px;
}

.info-to-normal {
  transition: all var(--during);
  color: var(--info);

  &:hover {
    color: var(--normal);
    // text-shadow: var(--shadow);
    text-shadow: 0 0 1px var(--info);
  }
}

.shadow-block {
  box-shadow: var(--shadow);
  transition: all var(--during);

  &:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }
}