{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "noImplicitAny": false,
    "types": [
      "webpack-env"
    ],
    "typeRoots": [
      "./node_modules/vue/types"
    ],
    "paths": {
      "@/*": [
        "*"
      ],
      "components/*": [
        "renderer/components/*"
      ],
      "assets/*": [
        "renderer/assets/*"
      ],
      "utils/*": [
        "renderer/utils/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx", "src/renderer/utils/modalOption.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
